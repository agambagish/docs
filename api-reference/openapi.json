    "/": {
      "get": {
        "tags": [
          "Index"
        ],
        "responses": {
          "200": {
            "description": "Transact's Sandbox API Index",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "message"
                  ],
